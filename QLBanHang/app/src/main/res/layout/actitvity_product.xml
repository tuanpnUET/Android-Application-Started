<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:padding="5dp"
                android:layout_gravity="right"
                android:src="@drawable/new_icon_green_top_right"
                android:layout_width="60dp"
                android:layout_height="60dp"></ImageView>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/imgProductAvatar"
                    android:src="@drawable/noimageicon"
                    android:layout_marginTop="30dp"
                    android:layout_gravity="center|top"
                    android:layout_width="100dp"
                    android:layout_height="100dp"></ImageView>
                <TextView
                    android:id="@+id/txtvProductName"
                    android:textStyle="bold"
                    android:textColor="#F6060D"
                    android:textSize="18sp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:text="Tên sản phẩm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>
                <TextView
                    android:id="@+id/txtvProductPrice"
                    android:textStyle="italic"
                    android:textColor="#F6CE04"
                    android:textSize="15sp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:text="Giá sản phẩm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>
            </LinearLayout>
        </FrameLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>